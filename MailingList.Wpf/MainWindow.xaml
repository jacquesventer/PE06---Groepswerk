        <Label x:Name="label3" Content="First Name" HorizontalAlignment="Left" Margin="51,405,0,0" VerticalAlignment="Top" Foreground="#FF6A6969" FontSize="11" Grid.ColumnSpan="2"/>
        <Label x:Name="label3_Copy" Content="Last Name" HorizontalAlignment="Left" Margin="323,405,0,0" VerticalAlignment="Top" Foreground="#FF6A6969" FontSize="11" Grid.Column="1"/>
        <Label x:Name="label2_Copy" Content="Email" HorizontalAlignment="Left" Margin="57,434,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.148,0.471" FontWeight="Bold" Foreground="#FF6A6969" Grid.ColumnSpan="2"/>
        <Label x:Name="label2_Copy1" Content="Phone" HorizontalAlignment="Left" Margin="57,492,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.148,0.471" FontWeight="Bold" Foreground="#FF6A6969" Grid.ColumnSpan="2"/>
        <Label x:Name="label2_Copy2" Content="Address" HorizontalAlignment="Left" Margin="58,548,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.148,0.471" FontWeight="Bold" Foreground="#FF6A6969" Grid.ColumnSpan="2"/>
