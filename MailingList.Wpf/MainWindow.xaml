        <TextBox x:Name="txtPhone" HorizontalAlignment="Left" Height="23" Margin="57,515,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="672" Grid.ColumnSpan="4"/>
        <TextBox x:Name="txtStreet" HorizontalAlignment="Left" Height="23" Margin="57,571,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="672" Grid.ColumnSpan="4"/>
        <TextBox x:Name="txtCity" HorizontalAlignment="Left" Height="23" Margin="108,616,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="345" Grid.ColumnSpan="2" Grid.Column="1"/>
        <TextBox x:Name="txtPostalCode" HorizontalAlignment="Left" Height="23" Margin="41,616,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="174" Grid.Column="2" Grid.ColumnSpan="2"/>
