        <Button x:Name="btnGreen_Copy" Content="Send newsletter" HorizontalAlignment="Left" Margin="19,289,0,0" VerticalAlignment="Top" Width="153" Height="43" Background="#FF92E692" Foreground="#FF6A6969" RenderTransformOrigin="1,1" Grid.Column="6" Click="btnGreen_Click" Grid.ColumnSpan="2"/>
        <Button x:Name="btnBlue_Copy" Content="Choose winner" HorizontalAlignment="Left" Margin="8,682,0,0" VerticalAlignment="Top" Width="114" Height="43" Background="#FF92DEE6" Foreground="#FF6A6969" RenderTransformOrigin="1,1" Grid.Column="5" Click="btnBlue_Click" Grid.ColumnSpan="3"/>
        <Button x:Name="btnOrange_Copy" Content="Send winners mail" HorizontalAlignment="Left" Margin="141,682,0,0" VerticalAlignment="Top" Width="114" Height="43" Background="#FFEA9D02" Foreground="#FF6A6969" RenderTransformOrigin="1,1" Grid.Column="7" Click="btnOrange_Click" Grid.ColumnSpan="2"/>
        <Label x:Name="label" Content="Mailinglist Manager" Grid.Column="1" HorizontalAlignment="Left" Margin="231,107,0,0" VerticalAlignment="Top" Width="192" Foreground="Gray" FontSize="18" FontWeight="Bold"/>
        <Label x:Name="label_Copy" Content="Newsletter Manager" Grid.Column="6" HorizontalAlignment="Left" Margin="10,103,0,0" VerticalAlignment="Top" Width="201" Foreground="Gray" FontSize="18" FontWeight="Bold" Grid.ColumnSpan="2"/>
        <Label x:Name="label2_Copy4" Content="and the winner is..." HorizontalAlignment="Left" Margin="214,453,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.148,0.471" FontWeight="Bold" Foreground="#FF6A6969" Grid.Column="3" Grid.ColumnSpan="2" Width="129"/>
        <TextBox x:Name="textBox" Grid.ColumnSpan="6" Grid.Column="3" HorizontalAlignment="Left" Height="23" Margin="215,433,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="627"/>
        <TextBox x:Name="textBox1" Grid.ColumnSpan="6" Grid.Column="3" HorizontalAlignment="Left" Height="129" Margin="213,501,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="629"/>
        <Label x:Name="label2_Copy5" Content="Winners mail" HorizontalAlignment="Left" Margin="213,630,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.148,0.471" FontWeight="Bold" Foreground="#FF6A6969" Grid.Column="3" Grid.ColumnSpan="2" Width="106"/>
        <TextBox x:Name="textBox1_Copy" Grid.ColumnSpan="6" Grid.Column="3" HorizontalAlignment="Left" Height="129" Margin="213,142,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="629"/>
