        <Border BorderBrush="Black" BorderThickness="1" HorizontalAlignment="Left" Height="635" Margin="38,107,0,0" VerticalAlignment="Top" Width="711" Grid.ColumnSpan="4"/>

        <Image x:Name="Image1_png" Margin="0,0,33,694" Source="Image1.png" Stretch="Fill" Grid.ColumnSpan="3" Grid.Column="2" Width="300" Height="70"/>
        <ListBox x:Name="lstMailingList" HorizontalAlignment="Left" Height="203" Margin="57,142,0,0" VerticalAlignment="Top" Width="672" RenderTransformOrigin="-0.328,0.018" Grid.ColumnSpan="4"/>
        <TextBox x:Name="txtFirstName" HorizontalAlignment="Left" Height="23" Margin="57,389,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="333" Grid.ColumnSpan="2"/>
        <TextBox x:Name="txtLastName" HorizontalAlignment="Left" Height="23" Margin="328,389,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="320" Grid.ColumnSpan="3" Grid.Column="1"/>
