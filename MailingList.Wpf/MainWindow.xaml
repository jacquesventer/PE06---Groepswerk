        <Label x:Name="label_Copy1" Content="Competition Manager" Grid.Column="6" HorizontalAlignment="Left" Margin="10,394,0,0" VerticalAlignment="Top" Width="201" Foreground="Gray" FontSize="18" FontWeight="Bold" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
